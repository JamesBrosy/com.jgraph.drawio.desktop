{
  "app-id": "com.jgraph.drawio.desktop",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "draw.io",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "draw.io",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x draw.io-*.deb",
        "rm -f draw.io-*.deb",
        "tar -xf data.tar.xz",
        "cp -r opt/* /app",
        "install -Dm755 draw.io.sh /app/bin/draw.io",
        "install -Dm644 usr/share/applications/draw.io.desktop /app/share/applications/com.jgraph.drawio.desktop.desktop",
        "install -Dm644 usr/share/icons/hicolor/0x0/apps/draw.io.png /app/share/icons/hicolor/512x512/apps/com.jgraph.drawio.desktop.png",
        "desktop-file-edit --set-key=Exec --set-value='draw.io %U' /app/share/applications/com.jgraph.drawio.desktop.desktop",
        "desktop-file-edit --set-key=Icon --set-value='com.jgraph.drawio.desktop' /app/share/applications/com.jgraph.drawio.desktop.desktop",
        "install -Dm644 com.jgraph.drawio.desktop.appdata.xml /app/share/metainfo/com.jgraph.drawio.desktop.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "url": "https://github.com/jgraph/drawio-desktop/releases/download/v8.8.0/draw.io-amd64-8.8.0.deb",
          "sha256": "07a136019ba449c906142eeeedb402199002d52a78e2f62f7b27f80fc56b847e"
        },
        {
          "type": "script",
          "dest-filename": "draw.io.sh",
          "commands": [
            "exec env TMPDIR=$XDG_CACHE_HOME /app/draw.io/draw.io \"$@\""
          ]
        },
        {
          "type": "file",
          "path": "com.jgraph.drawio.desktop.appdata.xml"
        },
        {
          "type": "git",
          "url": "https://github.com/jgraph/drawio-desktop",
          "commit": "f41772dbb7eb91e76bc03a6971ece0d710a741c8"
        }
      ]
    }
  ]
}
